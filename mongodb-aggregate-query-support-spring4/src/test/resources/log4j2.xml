<Configuration>
  <Appenders>
    <RollingFile name="FILE" fileName="logfile.txt" filePattern="logfile-%d{MM-dd-yyyy}-%i.log.gz">
      <PatternLayout>
        <Pattern>%d [%t] %-5p %c{2} - %m%n</Pattern>
      </PatternLayout>
      <Policies>
        <TimeBasedTriggeringPolicy/>
        <SizeBasedTriggeringPolicy size="50 MB"/>
      </Policies>
      <DefaultRolloverStrategy max="4"/>
    </RollingFile>

    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout pattern="%d [%t] %-5p %c{2} - %m%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Root level="error">
      <AppenderRef ref="STDOUT"/>
      <AppenderRef ref="FILE"/>
    </Root>

    <Logger name="com.github.krr" level="error" additivity="false">
      <AppenderRef ref="STDOUT"/>
    </Logger>
    <Logger name="org.springframework.data.mongodb" level="error" additivity="false">
      <AppenderRef ref="STDOUT"/>
    </Logger>
    <Logger name="AggregateQueryProvider.Query" level="debug" additivity="false">
      <AppenderRef ref="STDOUT"/>
      <AppenderRef ref="FILE"/>
    </Logger>
  </Loggers>
</Configuration>
